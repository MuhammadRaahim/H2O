<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.H20" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l" tools:ignore="ObsoleteSdkInt">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline3" parent="TextAppearance.AppCompat.Display2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.MaterialComponents.tab" parent="TextAppearance.AppCompat.Display2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ShopKartHeadingStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Dialog" parent="Theme.H20">
        <item name="android:colorAccent" >@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorOnSecondary">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="android:colorControlActivated">@color/primary</item>
    </style>

    <style name="df_dialog_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ShopKartButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_24sdp</item>
        <item name="android:background">@drawable/drawable_button</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    <style name="Theme.H20.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.H20.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.H20.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>